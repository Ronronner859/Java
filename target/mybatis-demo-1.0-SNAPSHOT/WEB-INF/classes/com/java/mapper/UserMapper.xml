<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    namesqpce:名称空间
-->
<mapper namespace="com.java.mapper.UserMapper">
    <insert id="add">
        insert into tb_user (username,password,gender,addr)
        values (#{username},#{password},#{gender},#{addr})
    </insert>
    <select id="selectAll" resultType="User">
        select * from tb_user;
    </select>
<!--    <select id="selectById" resultType="com.java.pojo.User">-->
<!--        select *-->
<!--        from tb_user where id = {#id};-->
<!--    </select>-->
    <select id="selects" resultType="com.java.pojo.User">
        select *
        from tb_user
        where
            username = #{username}
        and password = #{password}
    </select>
</mapper>